
<h1 class="center"> Add an Airplane </h1>
<div class="row">
<div class="col-sm-6 offset-sm-3">
<%= form_for(@airplane, url: newairplane_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<br>
<div class="center">
<%= f.submit "Add the Airplane", class: "btn btn-outline-info btn-lg" %>
</div>
<% end %>
</div>
</div>
