<%=po.origin%>
<h5>To:</h5>
<%=po.destination%>
<br>
<%= link_to "Book a Seat", bookseat_path(:flight_id => po.id), class: "btn btn-outline-success btn-sm"%>
<br>

<%end%>
<%end%>
<% if flightd.count>=1 %>
<br>
<br>
<br>
<h5>Flights With the Same Destination </h5>
<% flightd.each do |pd| %>
<h4>
<%= pd.name %>
</h4>
<h5>From:</h5>
<%=pd.origin%>
<h5>To:</h5>
<%=pd.destination%>
<br>
<%= link_to "Book a Seat", bookseat_path(:flight_id => pd.id), class: "btn btn-outline-success btn-sm"%>
<br>
<%end%>
<%end%>

<%end%>
